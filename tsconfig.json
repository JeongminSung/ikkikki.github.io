{
    "extends": "astro/tsconfigs/base",
    "compilerOptions": {
        "strictNullChecks": true,
        "baseUrl": ".",
        "paths": {
            "@/components/*": ["src/components/*.astro"],
            "@/layouts/*": ["src/layouts/*.astro"],
            "@/utils/*": ["src/utils/*"],
            "@/data/*": ["src/data/*"],
            "@/site-config": ["src/site.config.ts"]
        }
    },
    "exclude": ["node_modules", "**/node_modules/*", ".vscode", "dist"]
}
